{
  "manifest_version": 3,
  "name": "City Time & Weather Companion",
  "version": "1.0",
  "description": "Get time zones and weather information for two cities using Google Gemini API",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 